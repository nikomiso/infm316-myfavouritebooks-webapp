%h1 All Books
 
%table#books
  %thead
    %tr
      %th Book Title
      %th Genre
      %th Description
      %th ISBN number
      %th Publish Date
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.genre
        %td= book.description
        %td= book.isbn_number
        %td= book.publish_date
        %td= link_to "More about #{book.title}",book_path(book)
        
= link_to 'Add new book', new_book_path